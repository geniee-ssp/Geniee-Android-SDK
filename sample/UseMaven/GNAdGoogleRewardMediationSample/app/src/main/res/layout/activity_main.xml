<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.co.geniee.gnadgooglerewardmediationsample.MainActivity"
    >

    <LinearLayout
        android:id="@+id/gns_sample_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textAlignment="center">

        <EditText
            android:id="@+id/gns_sample_unitid_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:width="300dp"
            android:ems="10"
            android:gravity="right"
            android:inputType="text"
            android:textAlignment="gravity"
            android:textColor="#000000" />

        <Button
            android:id="@+id/gns_sample_preload_button"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimary"
            android:enabled="true"
            android:text="@string/preload_text"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/gns_sample_show_button"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimary"
            android:enabled="false"
            android:text="@string/show_text"
            android:textColor="@android:color/white"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ListView
            android:id="@+id/gns_sample_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textFilterEnabled="false" />
    </LinearLayout>

</LinearLayout>
