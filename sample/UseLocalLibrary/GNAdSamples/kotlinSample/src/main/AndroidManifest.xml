<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.geniee.samples">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="jp.co.geniee.gnadsdk.common.gnadlogger.priority"
            android:value="INFO" />

        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Banner ads-->
        <activity
            android:name=".banner.BannerMenuActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".banner.SingleBannerDemoActivity"
            android:label="@string/title_activity_single_banner"
            android:parentActivityName=".banner.BannerMenuActivity" />
        <activity
            android:name=".banner.MultipleBannerDemoActivity"
            android:label="@string/title_activity_multiple_banner"
            android:parentActivityName=".banner.BannerMenuActivity" />
        <!-- Geniee Banner Activity -->
        <activity android:name="jp.co.geniee.gnadsdk.banner.GNAdWebActivity"
            android:label="@string/app_name" android:screenOrientation="portrait"/>

        <!--Native Ads-->
        <activity
            android:name=".nativead.NativeAdMenuActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".nativead.NativeDemoActivity"
            android:label="@string/title_activity_native_ad"
            android:parentActivityName=".nativead.NativeAdMenuActivity" />
        <activity
            android:name=".nativead.NativeSimpleVideoDemoActivity"
            android:label="@string/title_activity_native_simple_video"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".nativead.NativeAdMenuActivity" />
        <activity
            android:name=".nativead.NativeVideoDemoActivity"
            android:label="@string/title_activity_native_video"
            android:parentActivityName=".nativead.NativeAdMenuActivity" />

        <!--Interstitial Ads-->
        <activity
            android:name=".interstitial.InterstitialDemoActivity"
            android:label="@string/title_activity_interstitial"
            android:parentActivityName=".MainActivity" />
        <!-- Geniee Interstitial Activity -->
        <activity
            android:name="jp.co.geniee.gnadsdk.interstitial.GNInterstitialActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent" />

        <!--Vast Ads-->
        <activity
            android:name=".vast.VastDemoActivity"
            android:label="@string/title_activity_vast"
            android:parentActivityName=".MainActivity" />
        <!-- Geniee Vast Activity -->
        <activity
            android:name="jp.co.geniee.gnadsdk.video.GNVideoViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:screenOrientation="unspecified"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>
